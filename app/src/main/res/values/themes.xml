<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nexflix" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/netflix_red</item>
        <item name="colorSecondaryVariant">@color/darker_netflix_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="Theme.Nexflix.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/netflix_red</item>

    </style>

</resources>