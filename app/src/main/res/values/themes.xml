<resources>
    <!-- Base application theme. -->
    <style name="Theme.Nexflix" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/netflix_red</item>
        <item name="colorSecondaryVariant">@color/darker_netflix_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="Theme.Nexflix.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/netflix_red</item>

    </style>

    <style name="Theme.Nexflix.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/background_grey</item>
    </style>

    <style name="Theme.Nexflix.ToolBarTitle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>